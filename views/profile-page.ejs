<style>
  @import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Quicksand:wght@300;400;500;600;700&family=Road+Rage&display=swap');

  .myimg {
      width: 80px;
      margin-left: 10px;
      margin-right: 10px;
  }


  .navbar {
      width: 100% !important;
      padding: 0px;
      background-color: #ebc9c9 !important;
  }

  .nav-item {
      margin-left: 20px;
      color: black !important;
      font-weight: bold;
  }

  .login {
      margin-left: 580px !important;
  }

  body {
      background-color: #fff2f2;
      display: flex;
      flex-direction: column;
      height: 100vh;
      font-family: 'Poppins';
  }

  .inncontainer {
      background-color: purple;
      width: 90%;
      margin-top: 80px;
      max-width: 375px;
      text-align: center;
      border-radius: 30px;
      overflow: hidden;
      margin-left: auto;
      margin-right: auto;
  }

  .flyer {
      width: 100%;
      height: 180px;
  }

  .pp {
      width: 150px;
      height: 150px;
      border-radius: 500px;
      border: solid;
      border-color: purple;
      margin-top: -90px;
  }

  h1 {
      color: rgb(252, 183, 240);
      font-size: 20px;

  }

  .inner-container {
      padding: 12px;
  }

  .button-add {
      width: 150px;
      padding: 15px;
      border: none;
      margin-top: 10px;
      background-color: rgb(252, 183, 240);
      color: purple;
      font-family: "poppins";
      font-weight: bold;
      border-radius: 100px;
  }

  .done {
      border: solid;
      margin-top: 10px;
      border-color: rgb(252, 183, 240);
      background-color: purple;
      color: rgb(252, 183, 240);
      padding: 12px;
      border-radius: 100px;
  }

  .button-add:hover {
      border: solid;
      border-color: rgb(252, 183, 240);
      background-color: purple;
      color: rgb(252, 183, 240);
      padding: 12px;
  }

  @media (max-width:375px) {}

  .stats {
      display: flex;
      margin-top: 30px;
      flex-direction: row;
      justify-content: center;
  }

  .stats p {
      margin-top: -12px;
      color: #ebc9c9;
      font-size: small;
  }

  .col {
      margin-left: 15px;
      margin-right: 15px;
      text-align: center;
  }
</style>

<body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
          <a href="/dashboard"><img class="myimg" src="/Resources/logo.png"></a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
              aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                  <li class="nav-item">
                      <a class="nav-link" href="/users/search">Search</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/users/recommendations">Recommendations</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="#">News</a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link" href="/contactus">About us</a>
                  </li>
                  <li class="nav-item login">
                      <a name="name" class="nav-link" href="/users/profile">
                          <%=username%>
                      </a>
                  </li>
              </ul>
          </div>
      </div>
  </nav>
  <div class="inncontainer">
      <img class="flyer" src="/uploads/pfc.jfif">
      <img class="pp" src="/uploads/<%=profile_pic%>">
      <div class="inner-container">
          <h1>
              <%=name%>
          </h1>
          <div class="stats">
              <div class="col">
                  <h1>
                      <%=age%>
                  </h1>
                  <p>
                      age
                  </p>
              </div>
              <div class="col">
                  <h1>
                      <%=Cast%>
                  </h1>
                  <p>
                      Cast
                  </p>
              </div>
              <div class="col">
                  <h1>
                      <%=City%>
                  </h1>
                  <p>
                      City
                  </p>
              </div>
          </div>
          <button onclick="add()" class="button-add" id="mybutton">Add Friend</button>
      </div>
  </div>
  <script>
      window.onload =
          function checkfriend() {
              const myid = "<%=id%>"
              const currid="<%=currid%>"
              var url2 ="http://localhost:5001/users/user/checkfriend/"+myid+"/"+currid
              console.log(url2)
              fetch(url2).then(Res => Res.json()).then(res => {
                  console.log(res.requs)
                  if(res.requs.userid1===myid||res.requs.userid2===myid)
                  {
                      var element = document.getElementById("mybutton")
                      element.innerHTML = "Friends ✓"
                      element.classList.remove("button-add")
                      element.classList.add("done")
                  }
              }).catch(err => {
                  res.status(400).json({ err })
                  console.error(err)
              })
              var url = "http://localhost:5001/users/user/checkrequest/"
              url += myid;
              fetch(url).then(Res => Res.json()).then(res => {
                  console.log(res.requs)
                  if(res.requs.recieverid===myid)
                  {
                      var element = document.getElementById("mybutton")
                      element.innerHTML = "Request Sent ✓"
                      element.classList.remove("button-add")
                      element.classList.add("done")
                  }
              }).catch(err => {
                  res.status(400).json({ err })
                  console.error(err)
              })
          };
      function add() {
          const myid = "<%=id%>"
          var url = "http://localhost:5001/users/user/sendrequest/"
          url += myid;
          fetch(url, { method: 'post' }).then(Res => Res.json()).then(res => {
              var element = document.getElementById("mybutton")
              element.innerHTML = "Request Sent ✓"
              element.classList.remove("button-add")
              element.classList.add("done")
          }).catch(err => {
              res.status(400).json({ err })
              console.error(err)
          })
      }
  </script>
</body>

</html>